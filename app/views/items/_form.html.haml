%fieldset
  %legend Item details
  
  %label{:for=>"item_name"} Name
  = text_field :name=>"item[name]", :id=>"item_name", :value=>@item.name
  
  %label{:for=>"item_description"} Description
  = text_area @item.description, :name=>'item[description]', :id=>'item_description', :rows=>"8", :cols=>"40"
  
  %label{:for=>"item_url"} URL
  = text_field :name=>"item[url]", :id=>'item_url', :value=>@item.url
  
  .buttons
    %button.positive{:type=>"submit"}
      %img{:src=>"/images/icons/accept.png", :alt=>""}/
      Save
    %a.button.negative{:href=>url(:user, @user.id)}
      %img{:src=>"/images/icons/delete.png", :alt=>""}/
      Cancel